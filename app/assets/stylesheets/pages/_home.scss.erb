.banner-home {
  background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('<%= image_path "background.png" %>');
  background-size: cover;
  background-position: center;

  text-align: center;
  min-height: calc(100vh - 80px);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 40px;
}

.banner-content {
  align-items: center;
  text-align: center;
  margin-top: -150px;
}

.banner-home h1 {
  font-size: 60px;
  // font-weight: bold;
  text-shadow: 1px 1px 13px rgba(0, 0, 0, 0.9);
}
.banner-home p {
  font-size: 20px;
  font-weight: lighter;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 20px;
}
