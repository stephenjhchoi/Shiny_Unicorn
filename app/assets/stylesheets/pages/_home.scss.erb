.custom-check-box {
   display: none;
   vertical-align: middle;

   & + label:after {
     content: url('<%= image_path "cutlery.svg" %>');
     padding: 16px;
     display: inline-block;
     background: image-url('check_box_off.png');
     background-repeat: no-repeat;
     vertical-align: middle;
     background-size: 50%;
     cursor: pointer;
   }

   &:checked + label:after {
     background: image-url('check_box_on.png');
   }
 }

