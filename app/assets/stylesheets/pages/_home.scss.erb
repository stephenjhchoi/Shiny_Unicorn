html * {
  font-family: 'Quicksand', sans-serif;
}


.site-title {
  position: fixed;
  transform: rotate(-90deg);
  transform-origin: 0;
  top: 250px;
  left: 20px;
  text-transform: uppercase;
  font-size: 1.3rem;
  color: $champagne-gold;
  z-index: 1001;

}

.social-btns {
  position: fixed;
  transform-origin: 0;
  top: 500px;
  left: 13px;
  width: 20px;
  font-size: 1.8rem;
  text-transform: uppercase;
  color: $champagne-gold;
  z-index: 999;

  .fa {
    color: $champagne-gold;
  }
}


.banner-home {
  background-image: linear-gradient(rgba(0,0,0,2.7), rgba(0,0,0,-0.3)), url('<%= image_path "nyc-background.jpg" %>');
  background-size: cover;
  background-position: center;
  text-align: center;
  min-height: calc(100vh - 80px);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 40px;
}

.banner-content {
  align-items: center;
  text-align: center;
  // margin-top: -250px;
}

.banner-home h1 {
  // font-weight: bold;
  // text-shadow: 1px 1px 13px rgba(0, 0, 0, 0.9);
}

.banner-home p {
  font-size: 20px;
  font-weight: lighter;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 20px;
}

.title{
  font-family: 'Quicksand', sans-serif;
  font-size: 38px;
  font-weight: bold;
  margin-top: 109px;
  margin-bottom: 45px;
  line-height: 1.8;
  letter-spacing: 0.01em;
  color: #FFFFFF;
}

.shiny-unicorn{
  color: #FFFFFF;
  text-shadow: 0 0 30px rgba(255,255,255,0.50);
}


.magical {
  color: $mint;
}



#search-input {
  background-color: transparent;
  border: 0;
  font-size: 27px;
  width: 420px;
  color: #fff;
  border-bottom: 1px solid $mint;
  &:focus {
    outline:0;
  }
}


.venues {
  .venue-element{
    background: rgba(255,255,255,0.05);
    display: inline-block;
    width: 110px;
    padding: 18px 0;
    &:hover {
      background: rgba(255,255,255,0.1);
    }
    .venue-checkbox {
     display: none;
     vertical-align: middle;

     & + label:before {

     font-size: 30px;
     font-family: FontAwesome;
     // content: url('<%#= image_path "bar2.svg" %>');
     // padding: 16px;
     display: inline-block;
     background-repeat: no-repeat;
     vertical-align: middle;
     background-size: 50%;
     cursor: pointer;
     }
   }
   #checkbox-restaurant + label:before {
       content: "\f0f5";
     }
     #checkbox-bar + label:before {
       content: "\f000";
     }
     #checkbox-cafe + label:before {
       content: "\f0f4";
     }
   &:first-child {
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
  }
  &:last-child {
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
  }

}
}


.row-venue {
  margin-top: 50px;
  color: #ECEBEC;
}



.btn-center {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 60px;

}

.next-page-button {
  display: block;
  background-color: transparent;
  border: transparent;
  color: white;
  font-size: 30px;
}

.venue-btn {
  text-decoration: none;
  transition: all 0.2s ease-in-out;
  cursor: pointer;

  p {
    margin: 0;
    display: flex;
    font-size: 18px;
    align-items: center;
    justify-content: center;
    // -webkit-text-stroke: 0.3px white;
  }

}

.venue-glow-btn:hover, .venue-glow-btn.active {
  text-shadow: 0px 0px 5px white;
  // color: $mint;
}


.next-btn {
  color: #ECEBEC;
  // margin-top: 40px;
  // margin-bottom: -180px;
  height: 50px;
  width: 50px;

  font-family: FontAwesome;
  font-size: 40px;

  // background-image: url('<%#= image_path "right-arrow.svg" %>');
  background-size: cover;
  background-color: transparent;
  border: none;
  outline: none;
  &:focus{
    border: none;
    outline: none;
  }
}


.next-page {

}

.fa-chevron-circle-right {
  font-size: 40px;
}


.next-page-button:hover, .next-page-button.active {
  text-shadow: 0px 0px 1px $mint;
  color: $mint;
}


