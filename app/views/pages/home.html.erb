<div class="banner-home">
  <div class="banner-content">
    <h1 class="title">Hi, let me find
    <br>
    Magical date spots for you</h1>
    <br>
    <form action="<%= venues_path %>" class="form-inline">
    <select name='area' class="form-control custom-select box_size_cat">
        <option value="" selected>Choose Neighborhood</option>
        <% Venue::NEIGHBORHOOD.each do |neighborhood| %>
        <option value="<%= neighborhood %>"><%= neighborhood %></option>
        <% end %>
      </select>

      <div class="row-venue">
          <div class="col-xs-4">
            <input name='restaurant' id="custom-checkbox" class="custom-check-box" type="checkbox" />
            <label for="custom-checkbox" class="venue-btn venue-glow-btn"><br>Restaurant</label>

          </div>


          <div class="col-xs-4">
            <input name='bar' id="custom-checkbox1" class="custom-check-box1 venue-btn venue-glow-btn" type="checkbox" checked="checked"/>
            <label for="custom-checkbox1" class="venue-btn venue-glow-btn"><br>Bar</label>
          </div>


          <div class="col-xs-4">
            <input name='cafe' id="custom-checkbox2" class="custom-check-box2 venue-btn venue-glow-btn" type="checkbox" />
            <label for="custom-checkbox2" class="venue-btn venue-glow-btn"><br>Cafe</label>
          </div>
        </div>

      </select>
      <div class="btn-center">
          <input type="submit" class="next-btn text-center venue-btn venue-glow-btn" value='&#xf138'>
      </div>
    </form>
    </div>

