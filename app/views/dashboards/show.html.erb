<div class="container">
  <div class="row">
    <div class="col-md-3 text-center">
      <div class="dashboard-box profile-space">
        <%= image_tag "unicorn-icon.svg", style: 'width: 80px; margin-top: 80px;', class: "user-img" %>
        <h2>Toddler Unicorn</h2>
        <div class="edit-profile-btn"><%= link_to 'Edit profile',edit_user_registration_path %></div>
      </div>
    </div>

    <div class="col-md-9">
      <div class="dashboard-box profile-details">
        <p class="unicorn-details">My Shiny Unicorn Profile</p>
        <p class="pref-loc">My preferred location: Shoreditch</p>
        <div class="my-favorites">
          <p>My favorites <i class="fa fa-heart" aria-hidden="true"></i></p>
            <div class="row">
              <% current_user.venues.first(3).each do |venue| %>
                <%= render 'venues/venuecard', venue: venue %>
              <% end %>
            </div>
        </div>
      </div>
    </div>


    <!-- Shiny Unicorn's recommendations -->
    <div class="col-md-12">
      <div class="dashboard-box recommendations">
        <p>Shiny Unicorn's recommendations</p>
        <div class="row">

          <% current_user.venues.first(3).each do |venue| %>
            <%= render 'venues/venuecard', venue: venue %>
          <% end %>

        </div>
      </div>
    </div>


    <!-- My bookings -->
  </div>
</div>
