<div class="header-container">
  <div class="profile-header">
    <%= image_tag "unicorn-icon.svg", id="user-img"%>
    <p><%= current_user.name %></p>
    <p>123 points</p>
  </div>
</div>

<div class="dashboard-container">
  <div class="row unlocked-badges">
    <p>Unlocked Badges</p>

    <div id="badge-1">
    <%= image_tag "unicorn-icon.svg", class="unlocked-badges"%>
    <p>50 points</p>
    </div>

    <div id="badge-2">
    <%= image_tag "unicorn-icon.svg", class="unlocked-badges"%>
    <p>100 points</p>
    </div>

    <div id="badge-3">
    <%= image_tag "unicorn-icon.svg", class="unlocked-badges"%>
    <p>150 points</p>
    </div>

  </div>


  <div class="row favorite-spots">
    <p>Favorite Spots</p>

    <div class="col-md-12 dashboard-scroll">
      <% current_user.venues.first(3).each do |venue| %>
        <%= render 'venues/venuecard', venue: venue %>
      <% end %>
    </div>

  </div>

  <div class="row bookings">
      <% current_user.bookings.each do |booking| %>
      <%= render 'dashboards/bookingcard', booking: booking %>
      <% end %>
      </div>
  </div>


</div>
