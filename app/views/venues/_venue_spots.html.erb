<div class="venue-spots">
  <h4 class="gold-title"><strong>HOT SPOTS</strong></h4>

  <% render 'spots/spot-form' if user_signed_in? && current_user.admin %>

  <% unless @venue.spots.empty? %>
  <div class="venue-spot-photos">
    <% @venue.spots.each do |spot| %>
      <% if spot.photo %>
        <%= link_to cl_image_path(spot.photo.path) do %>
          <%= cl_image_tag(spot.photo.path, crop: :thumb, width: 200, height: 200) %>
          <span><%= spot.name || "test" %></span>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <% end %>
  <br>
  <button type="" value="Create a Spot in Venue" class="btn btn-primary" id="create-spot">Create spot</button>
</div>



