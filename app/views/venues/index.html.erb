<div class="wrapper">
  <div class="row">
    <div class="col-xs-6 col-md-4 ">
      <div class="stream-entry-inner" >
        <div class="stream-image" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= image_path "bodega.png" %>');">
          <div class="card_description">
            <h3>Bodega Negra</h3>
          </div>
        </div>
        <div class="border-bc">
          <div class="stream-body">
            <p>Mexican food in light upstairs cafe and hacienda-style cellar restaurant with lengthy tequila menu.</p>
            <div class="img_progress">
              <%= image_tag 'chili.svg', class:"img_format" %>
              <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                </div>
              </div>
            </div>
            <div class="img_progress">
              <i class="fa fa-heart-o"></i>
              <div class="progress">
                <div class="progress-bar progress-bar-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                </div>
              </div>
            </div>
          </div>
          <div class="stream-body2">
            <a href="#"><i class="fa fa-instagram"></i></a>
            <span>Soho | £££</span>
            <a id="heart" href="#"><i class="fa fa-heart-o"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="stream-body3">
    <div class="slider-wrapper">
      <div class="sliders">
        <input id="ex9" type="text" />
      </div>
      <div class="sliders">
        <input id="ex11" type="text" data-slider-handle="custom" data-slider-value="0"/>
      </div>
    </div>
  </div>







  <div class="col-md-4">

    <div id="map" style="width: 100%; height: 100vh;"></div>

    <% content_for(:after_js) do %>
    <script>
      $(document).ready(function() {
        var handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          if (markers.length == 0) {
            handler.getMap().setZoom(2);
          } else if (markers.length == 1) {
            handler.getMap().setZoom(14);
          }
        });
      });
    </script>
    <% end %>
  </div>

