

<div class="banner" style="background-image: url('<%= cl_image_path @venue.photo.path %>');">
  <div class="banner-text">
    <div class='venue-name'>
      <h1><%= @venue.name.upcase %></h1>
    </div>
    <div class="venue-mood">
      <h3><%= @venue.mood.capitalize %></h3>
    </div>
    <div class="venue-area">
      <p><%= @venue.area %> | <%= '£ ' * @venue.price %></p>
    </div>
    <div class='socialrow'>
    <%= link_to '#' do %>
    <div class='socialbutton instagram'>
      <i class="fa fa-instagram"></i>
    </div>
    <% end %>
    <%= link_to '#' do %>
    <div class='socialbutton facebook'>
      <i class="fa fa-facebook"></i>
    </div>
    <% end %>
    <%= link_to '#' do %>
    <div class='socialbutton twitter'>
      <i class="fa fa-twitter"></i>
    </div>
    <% end %>
    </div>

    <div class="favoriterow text-center">
    <% if @is_favorite %>
        <%= link_to favorite_path(@venue.favorites.find_by_user_id(current_user.id)), method: :delete do %>
          <i class="fa fa-heart-o"></i> <span>Remove from Favorites</span>
        <% end  %>
      <% else %>
        <%= link_to venue_favorites_path(@venue), method: :post do %>
          <i class="fa fa-heart"></i> <span>Add to Favorites</span>
      <% end %>
    <% end %>
    </div>

  </div>
</div>




