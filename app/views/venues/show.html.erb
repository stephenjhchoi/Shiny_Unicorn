<div class="banner" style="background-image: url('<%= cl_image_path @venue.photo.path %>');">
  <div class="banner-text">
    <div class='venue-name'>
      <h1><%= @venue.name.upcase %></h1>
    </div>
    <div class="venue-mood">
      <h3><%= @venue.mood.capitalize %></h3>
    </div>
    <div class="venue-area">
      <p><%= @venue.area %> | <%= 'Â£ ' * @venue.price %></p>
    </div>
    <div class='socialrow'>
    <%= link_to '#' do %>
    <div class='socialbutton instagram'>
      <i class="fa fa-instagram"></i>
    </div>
    <% end %>
    <%= link_to '#' do %>
    <div class='socialbutton facebook'>
      <i class="fa fa-facebook"></i>
    </div>
    <% end %>
    <%= link_to '#' do %>
    <div class='socialbutton twitter'>
      <i class="fa fa-twitter"></i>
    </div>
    <% end %>
    </div>

    <div class="favoriterow text-center">
    <% if @is_favorite %>
        <%= link_to favorite_path(@venue.favorites.find_by_user_id(current_user.id)), method: :delete do %>
          <i class="fa fa-heart-o"></i> <span>Remove from Favorites</span>
        <% end  %>
      <% else %>
        <%= link_to venue_favorites_path(@venue), method: :post do %>
          <i class="fa fa-heart"></i> <span>Add to Favorites</span>
      <% end %>
    <% end %>
    </div>

  </div>
</div>

<div class="venue-wrapper">
  <div class="venue-details">
    <%= render "venue_profile" %>
      <%= render "venue_spots" %>
    <%= render "spots/spot-form" %>
  </div>
  <div class="venue-booking">
    <%= render 'booking/booking-form' %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content text-center">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Find hidden magical date spots in your neighborhood</h4>
      </div>

      <div class="modal-body">

        <div class="login-btn facebook">
          <!-- <i class="fa fa-facebook" aria-hidden="true"></i> -->
          <%= link_to "Continue with Facebook", user_facebook_omniauth_authorize_path, class: "login-btn-txt" %>
        </div>
      </div>
    </div>
  </div>
</div>

<% render 'reviews/review-form' %>

<% content_for :after_js do %>
<script>
  $('#create-spot').on('click', function(){
    $('#create-spot-form').toggleClass('hidden');
  });
</script>
<% end %>




